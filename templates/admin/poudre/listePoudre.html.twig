{% extends 'base.html.twig' %}

{% block title %}Gestion Poudre Parmuée{% endblock %}

{% block body %}
<h1 class="pt-2 text-center">Nos poudres parfumées</h1>
<a href=" {{ path("admin_poudre_ajout")}} " class="btn btn-sucess">Ajouter une Poudre Parfumée</a>
<hr>
<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col"></th>
      <th scope="col"><u>Nom</u></th>
      <th scope="col"><u>Detail</u></th>
      <th scope="col"><u>Actions</u></th>
    </tr>
  </thead>
  <tbody>
      {% for LaPoudre in lesPoudres %}
        {# {% set variable_name = expression %} #}
        <tr>
        <td class="col-2"><img class="avatar mx-auto d-block" style="height: auto; width: 300px; display: block;" src="{{LaPoudre.image}}" alt"Card image"></img></td>
        <td class="col-2">{{LaPoudre.nom}}</td>
        <td class="col-7">
        <p class="d-flex flex-row">
          <span class="align-self-center badge-sucess"> {{LaPoudre.prix}}€</span>
          <span class="align-self-center mx-3"> {{LaPoudre.materiaux}} </span>
          <span class="align-self-center mx-3"> {{LaPoudre.couleur}} </span>
          <span class="align-self-center ml-auto"> {{LaPoudre.dureeDeVie}} </span>
          <span class="align-self-center mx-3"> {{LaPoudre.taille}} </span>
        </p>
        <p>{{ LaPoudre.description|slice(0,200)|raw}}...</p>
        </td>
        <td class="col-2">
        <a href="" class="btn btn-outline-primary"><i class="fas fa-pen"></i></a>
        </td>
        <td><a type="button" class="btn btn-primary" data-toggle="modalSimple" data-target="#exampleModal"><i class="fa-solid fa-trash"></i></a></td>
        </tr>
      {% endfor %}
  </tbody>
</table>

</div>
<br><br><br><br><br><br><br><br><br><br><br>
{% endblock %}
