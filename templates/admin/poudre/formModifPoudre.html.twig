{% extends 'base.html.twig' %}

{% block title %}Modification Poudre Parmuée{% endblock %}

{% block body %}
<h1 class="pt-2 text-center">Modification de poudres parfumée</h1>
{{form_start(formPoudre)}}


{{form_row(formPoudre.image)}}
{{form_row(formPoudre.nom)}}
<div class="row">
    <div class="col">{{form_row(formPoudre.prix)}}</div>
    <div class="col">{{form_row(formPoudre.taille)}}</div>
    <div class="col">{{form_row(formPoudre.dureeDeVie)}}</div>
    <div class="col">{{form_row(formPoudre.materiaux)}}</div>
    <div class="col">{{form_row(formPoudre.couleur)}}</div>
</div>
{{form_row(formPoudre.description)}}
<div class="row">
    <div class="col"><input type="submit", class="btn btn-outline-success btn-block form-control" value="valdier"></div>
    <div class="col"><a href="{{path('admin_poudre')}}" class="btn btn-outline-warning btn-block form-control">Annuler</a></div>
</div>



</div>




{{form_end(formPoudre)}}
{% endblock %}
