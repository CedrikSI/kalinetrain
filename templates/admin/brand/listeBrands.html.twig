{% extends 'base.html.twig' %}

{% block title %}Gestion Brand{% endblock %}

{% block body %}


<a href=" {{ path("admin_Brand_ajout")}} " class="mt-4 btn btn-outline-primary">Ajouter une Marque</a>

<hr>
<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col"></th>
      <th scope="col"><u>Nom</u></th>
      <th scope="col"><u>Detail</u></th>
      <th scope="col"><u>Actions</u></th>
    </tr>
  </thead>
  <tbody>
      {% for LaBrand in lesbrands %}
        {# {% set variable_name = expression %} #}
        <tr class="pt-2" style="border-bottom: 1px solid #c74ae0; border-top: 1px solid #c74ae0">
        <td class="col-2"><img class="avatar mx-auto d-block" style="height: auto; width: 300px; display: block;" src="{{ asset('uploads/images/' ~ LaBrand.imageFilename) }}" alt="{{ LaBrand.libelle }}"></td>
        <td class="col-2">{{LaBrand.libelle}}</td>
        <td class="col-7">
        <p class="d-flex flex-row">
        </p>
        </td>
            <td class="col-2">
                <a href="{{ path('admin_Brand_modif',{'id': LaBrand.id}) }}" class="btn btn-outline-primary"><i class="fas fa-pen"></i></a>
            </td>
            <td>
                <a class="btn btn-outline-danger"
                 data-toggle="modal" 
                 data-target="#modalSimple"  
                 data-titre="Suppression de la Brand"
                 data-message="Voulez-vous vraiment supprimer la Brand {{LaBrand.libelle}} ?"
                 data-libelleBouton = "Supprimer la Brand "
                 data-lien = "{{ path('admin_Brand_suppr',{'id': LaBrand.id}) }}" 
                 ><i class="fas fa-trash"></i></a>
            </td>
        </tr>
        
      {% endfor %} 
      
  </tbody>
</table>


</div>
{% endblock %}
{% block javascripts %}

  {% include "include/_modale.html.twig" %}




<br><br><br><br><br><br><br><br><br><br><br>
{% endblock %}
