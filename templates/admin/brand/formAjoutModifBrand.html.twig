{% extends 'base.html.twig' %}

{% block title %}Gestion Marque{% endblock %}

{% block body %}
<h1 class="pt-2 text-center"> 
    {% if app.request.attributes.get('_route') == "admin_Brand_ajout" %}
        Ajout
    {% else %}
        Modification
    {% endif %}
    de Marque</h1>

{{ form_start(formBrand,{'attr':{'novalide':'novalidate'}})}}


<div class="row">
    <div class="col-8">{{ form_row(formBrand.libelle) }}</div>
</div>
<div class="row">
    <div class="col-4">
        <img src="{{ asset('image/brands/' ~ formBrand.image.vars.value|replace({'http://': '', 'https://': ''})) }}" alt="" class="rounded mx-auto d-block img-thumbmail" style="height: auto; width: 300px; display: block;">
    </div>
</div>

<div class="row mt-4">
    <div class="col">
        {{ form_row(formBrand.image) }}
    </div>
</div>


<div class="row">
    <div class="col">
        <input type="submit" class="btn valider btn-outline-success btn-block form-control" value="valider">
    </div>
    <div class="col">
        <a href="{{ path('admin_Brand') }}" class="btn btn-outline-warning btn-block form-control">Annuler</a>
    </div>
</div>

{{ form_end(formBrand) }}
{% endblock %}
