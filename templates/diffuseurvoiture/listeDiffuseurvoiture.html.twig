{% extends 'base.html.twig' %}

{% block title %}Liste des Diffuseurs Voiture{% endblock %}

{% block body %}
  <div class="container">
    <h1 class="text-center mb-5">Liste des Diffuseurs Voiture</h1>

    {% if LesDiffuseursVoiture is not empty %}
      <div class="row">
        {% for diffuseur in LesDiffuseursVoiture %}
          <div class="col-md-4 mb-4">
            <div class="card">
              <img src="{{ diffuseur.image }}" class="card-img-top" alt="Image de {{ diffuseur.nom }}">
              <div class="card-body">
                <h5 class="card-title">{{ diffuseur.nom }}</h5>
                <p class="card-text">{{ diffuseur.description }}</p>
                <p class="card-text"><strong>Prix :</strong> {{ diffuseur.prix }} €</p>
                <p class="card-text"><strong>Matériaux :</strong> {{ diffuseur.materiaux }}</p>
                <p class="card-text"><strong>Couleur :</strong> {{ diffuseur.couleur }}</p>
                <p class="card-text"><strong>Poids :</strong> {{ diffuseur.poids }} kg</p>
                <p class="card-text"><strong>Durée de vie :</strong> {{ diffuseur.duréeDeVie|date('d-m-Y') }}</p>
                <p class="card-text"><strong>Taille :</strong> {{ diffuseur.taille }} cm</p>
                <a class="dropdown-item" href="{{ path('app_fiche_diffuseurvoiture', {'id': diffuseur.id}) }}">Fiche Diffuseur Voiture</a>
              </div>
            </div>
          </div>
        {% endfor %}
      </div>
    {% else %}
      <p>Aucun diffuseur voiture trouvé.</p>
    {% endif %}
  </div>
{% endblock %}

{% block stylesheets %}
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KyZXEJ1mR7gXQm7g66j6kR3J1ji7b+HkBqAqPTr9W1o8Dk5h7YdBxF1EbwFcbjop" crossorigin="anonymous">
  <style>
    .card {
      border-radius: 10px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }
    .card-img-top {
      border-radius: 10px 10px 0 0;
      max-height: 200px;
      object-fit: cover;
    }
    .card-body {
      text-align: center;
    }
    .card-title {
      font-size: 1.2rem;
      font-weight: bold;
    }
    .container {
      margin-top: 50px;
    }
    .text-center {
      text-align: center;
    }
  </style>
{% endblock %}
