{% extends 'base.html.twig' %}

{% block title %}Détail de l'Objet Décoratif{% endblock %}

{% block body %}
  <div class="container">
    <h1 class="text-center mb-5">{{ objetDeco.nom }}</h1>

    <div class="row">
      <div class="col-md-6 mb-4">
        <img src="{{ objetDeco.image }}" class="img-fluid rounded" alt="Image de {{ objetDeco.nom }}">
      </div>
      <div class="col-md-6 mb-4">
        <h3>Description</h3>
        <p>{{ objetDeco.description }}</p>

        <h4>Prix : {{ objetDeco.prix }} €</h4>

        <div class="mt-4">
          <a href="{{ path('app_liste_objetdecoration') }}" class="btn btn-secondary">Retour à la liste</a>

          {% if is_granted('ROLE_ADMIN') %}
            <a href="{{ path('admin_objetdecoration_modifier', {'id': objetDeco.id}) }}" class="btn btn-warning mt-3">Modifier</a>

            <form action="{{ path('admin_objetdecoration_supprimer', {'id': objetDeco.id}) }}" method="post" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cet objet décoratif ?');" class="d-inline">
              <button type="submit" class="btn btn-danger mt-3">Supprimer</button>
            </form>
          {% endif %}
        </div>
      </div>
    </div>
  </div>
{% endblock %}

{% block stylesheets %}
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KyZXEJ1mR7gXQm7g66j6kR3J1ji7b+HkBqAqPTr9W1o8Dk5h7YdBxF1EbwFcbjop" crossorigin="anonymous">
  <style>
    .container {
      margin-top: 50px;
    }
    .img-fluid {
      max-height: 400px;
      object-fit: cover;
    }
    .btn-secondary, .btn-warning, .btn-danger {
      margin-top: 20px;
    }
    .text-center {
      text-align: center;
    }
  </style>
{% endblock %}

