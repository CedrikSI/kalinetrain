{% extends 'base.html.twig' %}

{% block title %}Détail de l'Objet Décoratif{% endblock %}

{% block body %}
<h1 class="pt-2 text-center">Fiche des objects de décoration </h1>
<div class="container">
  <div class="mt-4">
    <a href="{{ path('poudre') }}" class="mb-4 btn btn-secondary">Retour à la liste</a>
  </div>

  {% if objetDeco %}
    <div class="row">
      <div class="col-md-6 mb-4">
        <img src="{{ objetDeco.image }}" class="img-fluid rounded" alt="Image de {{ objetDeco.nom }}">
      </div>
      
      <div class="col-md-6 mb-4">
        <div class="card">
          <div class="card-header">
            <h3><u>{{ objetDeco.nom }}</u></h3>
          </div>
          <div class="card-body">
            <h4>Prix : {{ objetDeco.prix }} €</h4>
            <h4 class="card-title"><strong>Description</strong></h4>
            <p class="card-text">{{ objetDeco.description }}</p>
          </div>
        </div>
      </div>
    </div>
  {% else %}
    <div class="alert alert-danger" role="alert">
      L'objet décoratif n'a pas été trouvé.
    </div>
  {% endif %}
</div>
{% endblock %}

{% block stylesheets %}
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" 
  integrity="sha384-KyZXEJ1mR7gXQm7g66j6kR3J1ji7b+HkBqAqPTr9W1o8Dk5h7YdBxF1EbwFcbjop" crossorigin="anonymous">
  <link rel="stylesheet" href="{{ asset('public/image/app.css') }}">
{% endblock %}
