{% extends 'base.html.twig' %}

{% block title %}Mon Panier{% endblock %}

{% block body %}
<div class="container">
    <h1 class="text-center mb-5">Mon Panier</h1>

    {% if cart.items is not empty %}
        <div class="row">
            {% for item in cart.items %}
                <div class="col-md-4 mb-4 d-flex align-items-stretch">
                    <div class="card h-100">
                        <div class="card-img-wrapper">
                            <img class="card-img-top" src="{{ asset('uploads/images/' ~ item.produit.imageFileName|replace({'http://': '', 'https://': ''})) }}" alt="Card image">
                        </div>
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">{{ item.produit.nom }}</h5>
                            <p class="card-text"><strong>Prix :</strong> {{ item.produit.prix }} â‚¬</p>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% else %}
        <p>Votre panier est vide.</p>
    {% endif %}
</div>
{% endblock %}