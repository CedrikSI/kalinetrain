{% extends 'base.html.twig' %}

{% block title %}Liste des Poudres Parmées{% endblock %}

{% block body %}
  <div class="container">
    <h1 class="text-center mb-5">{{ LaPoudre.nom }}</h1>

    <div class="row">
      <div class="col-md-6 mb-4">
        <img src="{{ LaPoudre.image }}" class="img-fluid rounded" alt="Image de {{ LaPoudre.nom }}">
      </div>
      <div class="col-md-6 mb-4">
        <h3>Description</h3>
        <p>{{ LaPoudre.description }}</p>

        <h4>Prix : {{ objet.prix }} €</h4>

        <div class="mt-4">
          <a href="{{ path('listePoudre') }}" class="btn btn-secondary">Retour à la liste</a>
        </div>
      </div>
    </div>
  </div>
{% endblock %}

{% block stylesheets %}
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KyZXEJ1mR7gXQm7g66j6kR3J1ji7b+HkBqAqPTr9W1o8Dk5h7YdBxF1EbwFcbjop" crossorigin="anonymous">
{% endblock %}
